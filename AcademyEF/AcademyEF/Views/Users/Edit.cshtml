@model AcademyEF.ViewModels.UsersVM.EditVM

@{
    if (Model.ID == 0)
    {
        ViewBag.Title = "Add";
        <h2>Add</h2>
    }
    else
    {
        ViewBag.Title = "Edit";
        <h2>Edit</h2>
    }
}


